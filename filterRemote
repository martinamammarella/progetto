package utils;

import java.util.ArrayList;
import java.util.Date;
import java.util.Vector;

import org.json.simple.JSONArray;

import model.Lavori;

public class filterRemote extends Filters{
	public filterRemote(String[] city, String[] linguaggi,String remoto, String link, Date data,String oreLavoro){
		 super(city,linguaggi,remoto,link,data,oreLavoro);
	}
	public ArrayList<Lavori> filtraggio(String remote,Vector<Lavori> offerte) {
		ArrayList<Lavori> filtrato = new ArrayList<Lavori>();
		 for(Lavori z:offerte) {
				 if(z.getRemoto()!=true) {
				filtrato.add(z);
				 }
					 
			 }
		 
		 return filtrato;
	 }
}
