package utils;
import java.util.Date;
import java.util.Vector;
import model.Lavori;
import org.json.simple.*;
import model.Lavori;
public class filterCity extends Filters {
	public filterCity(String[] city, String[] linguaggi,String remoto, String link, Date data,String oreLavoro){
		 super(city,linguaggi,remoto,link,data,oreLavoro);
	}
 public JSONArray filtraggio(String[] fcity,Vector<Lavori> offerte) {
	 JSONArray a= new JSONArray();
	 for(Lavori z:offerte) {
		 if(z.getCity()!=null) {
		 for(String c:fcity) {
		  if(z.getCity().contains(c)) {
			 a.add(z);}
			  }
	 }}
	 return a;
 }
}
